<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/ssc"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="500px">
<ImageView
    android:id="@+id/logo"
    android:layout_width="300px"
    android:layout_height="300px"
    android:src="@drawable/logo"
   android:layout_centerInParent="true"
    />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/logo"
         android:textSize="16sp"
         android:text="让管理变得简单·高效·自由"
         />


<ImageButton
    android:id="@+id/set"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/server"
    android:layout_alignTop="@+id/server"
    android:background="@drawable/server"
    android:layout_marginRight="10px"
    />
<TextView
    android:layout_marginRight="20px"
    android:id="@+id/server"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:textColor="@color/colorwhite"
    android:text="主机"
    android:layout_marginTop="90px"
    />
    </com.zhy.autolayout.AutoRelativeLayout>



<EditText
    android:layout_below="@+id/ssc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/company_name"
    android:drawableLeft="@drawable/home"
    android:background="@drawable/myshape01"
    android:hint="请输入公司名"
    android:layout_margin="50px"
    android:drawablePadding="30px"
    android:textSize="20sp"
    />
    <EditText
        android:layout_below="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:drawableLeft="@drawable/user"
        android:background="@drawable/myshape01"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:drawablePadding="30px"
        android:hint="请输入用户名"
        android:textSize="20sp"
        />

    <EditText
        android:layout_below="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pwd"
        android:drawableLeft="@drawable/lock"
        android:background="@drawable/myshape01"
        android:layout_margin="50px"
        android:drawablePadding="30px"
        android:hint="请输入密码"
        android:textSize="20sp"
        />

    <EditText
        android:visibility="gone"
        android:layout_below="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/replace"
        android:drawableLeft="@drawable/item"
        android:background="@drawable/myshape01"
       android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:drawablePadding="30px"
        android:hint="请输被代人的用户名"
        android:textSize="20sp"
        />



<com.zhy.autolayout.AutoRelativeLayout

    android:layout_margin="50px"
    android:id="@+id/checkbox"
    android:layout_below="@+id/replace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/ispwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"/>
    <CheckBox
        android:layout_marginLeft="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="自动登录"/>

</com.zhy.autolayout.AutoRelativeLayout>


<Button
    android:layout_below="@+id/checkbox"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="50px"
    android:layout_marginLeft="50px"
    android:layout_marginBottom="50px"
    android:background="@drawable/myshape02"
    android:textSize="20sp"
    android:textColor="@color/colorwhite"
    android:text="登录"

    />

    <Button
        android:id="@+id/who"
        android:layout_below="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/myshape03"
        android:textSize="20sp"
        android:textColor="#D62339"
        android:text="代人上班"

        />
<TextView
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginBottom="20px"
    android:layout_alignParentBottom="true"
    android:text="当前版本号：1.0.0"
    />


</com.zhy.autolayout.AutoRelativeLayout>
